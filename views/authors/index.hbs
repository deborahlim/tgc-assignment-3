{{#extends "base"}}

  {{#block "content"}}
    <div class="p-4 text-end">
      <h1 class="display-3 text-center my-3">Authors</h1>

      <div class="v-stack gap-3 my-5">
          <a href="authors/create" class="btn btn-primary mb-4">Add Author</a>
   
          <form class="d-flex justify-content-end fw-bold mb-0" method="GET">
            {{{form}}}
            <input
              type="submit"
              class="btn btn-info ms-3"
              value="Search"
            />
          </form>
        </div>
      </div>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col"></th>
          </tr>

        </thead>
        <tbody class="">
          {{#each authors}}
            <tr class="align-middle">
              <th scope="row">
                {{this.id}}
              </th>
              <td>{{this.name}}</td>
              <td>
                <a
                  href="/authors/{{this.id}}/delete"
                  class="btn btn-danger btn-sm"
                >Delete</a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>

    </div>
  {{/block}}

{{/extends}}