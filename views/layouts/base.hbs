<html lang="en">

  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" type="text/css" href="./../../css/styles.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />

    <title>The Book Corner</title>

  </head>

  <body>
    <div>
      {{#if currentUser}}
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="#" class="me-3">The Book Corner</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link {{#if active.Books}}active{{/if}}" aria-current="page" href="/books">Books</a>

              </li>
              <li class="nav-item">
                <a href="/authors"  class="nav-link  {{#if active.Authors}}active{{/if}}" aria-current="page">
                  Authors</a>
              </li>
              <li class="nav-item">
                <a href="/publishers" class="nav-link  {{#if active.Publishers}}active{{/if}}" aria-current="page">
                  Publishers</a>
              </li>
              <li class="nav-item">
                <a href="/genres" class="nav-link  {{#if active.Genres}}active{{/if}}" aria-current="page">
                  Genres</a>
              </li>
              <li class="nav-item">
                <a href="/tags" class="nav-link  {{#if active.Tags}}active{{/if}}" aria-current="page">
                  Tags</a>
              </li>
              </li>
              <li class="nav-item">
                <a href="/users" class="nav-link  {{#if active.Users}}active{{/if}}" aria-current="page">
                  Users</a>
              </li>
               <li class="nav-item">
                <a href="/orders" class="nav-link  {{#if active.Orders}}active{{/if}}" aria-current="page">
                  Orders</a>
              </li>
            </ul>
            <div class="text-light d-flex align-items-center">
              <a href="/users/{{currentUser.id}}/account" class="nav-link text-light {{#if active.Account}}active{{/if}}"
                aria-current="page">My
                Account</a>
              <div class="">{{#if currentUser}}
                <span>Hi,
                  {{currentUser.username}}</span>  
                  <a href="/users/logout" class="ms-3 btn btn-light btn-sm">Log Out</a>

                {{else}}
                <span class="pt-2">Hi, stranger</span>   
                  <a href="/" class="ms-3 btn btn-light btn-sm">Log In</a>
                {{/if}}</div>

            </div>
          </div>

        </div>
      </nav>
      {{/if}}
    </div>
    <div>
      {{#if success_messages }}
        {{#each success_messages}}
          <div class="alert alert-success absolute m-3">
            {{this}}
          </div>
        {{/each}}
      {{/if}}

      {{#if error_messages}}
        {{#each error_messages}}
          <div class="alert alert-danger absolute m-3">
            {{this}}
          </div>
        {{/each}}

      {{/if}}

    </div>
    <div class="m-3">
      {{#block "content"}}{{/block}}
    </div>

    <script>
      let alert = document.querySelector( '.absolute' )
      if ( alert ) {
        setTimeout( () => alert.classList.add( 'fade' ), 2000 );
        setTimeout( () => alert.classList.add( 'remove' ), 2001);
      }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous">
    </script>
    {{#block "js"}}{{/block}}

  </body>

</html>