{{#extends "base"}}

  {{#block "content"}}
    <h1 class="text-center my-5">Update Order: {{order.id}}</h1>
    <div class="fw-bold">
      <form method="POST" class="form">
        {{{form}}}
        <input type="hidden" name="_csrf" value="{{csrfToken}}" />
            <div class="mt-4">
          <input type="submit" value="Update Order" class="btn btn-primary" />
          <a href="/orders" class="btn btn-danger ms-2">Cancel Update</a>
        </div>

      </form>
    </div>
  {{/block}}
{{/extends}}