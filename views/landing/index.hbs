{{#extends 'base'}}

    {{#block 'content'}}
        <div class="m-md-5 m-sm-0 mb-5 text-center">
            <div class="mx-auto mt-5 py-3">
                <h1 class="display-2">The Book Corner </h1>
                <p class="display-6 fw-bold">Online Book Shop</p>
            </div>
            <div class="mt-3 p-5 bg-secondary text-light rounded-3 form">
                <p class="fw-bold lead">Register</p>
                <form method="POST" class="form">
                    <input type="hidden" name="_csrf" value="{{csrfToken}}" />
                    {{{form}}}
                    <div class="mt-4">
                        <input type="submit" value="Register" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    {{/block}}


{{/extends}}