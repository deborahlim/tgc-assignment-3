{{#extends "base"}}

  {{#block "content"}}
    <div class="container text-center" style="">
      <div class="mx-auto mt-5 py-3">
        <h1 class="display-2">The Book Corner </h1>
        <p class="display-6 fw-bold">Online Book Shop</p>
      </div>
      <div class="mt-3 p-5 bg-secondary text-light rounded-3 form">
        <p class="lead">Log in to access your account</p>

        <form method="POST" class="form">
          <input type="hidden" name="_csrf" value="{{csrfToken}}" />
          <div class="p-sm-2 p-md-5">{{{form}}}</div>

          <input type="submit" class="btn btn-primary mt-4" value="Log In" />
        </form>
      </div>
    </div>
  {{/block}}

{{/extends}}