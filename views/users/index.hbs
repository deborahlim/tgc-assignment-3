{{#extends 'base'}}

    {{#block 'content'}}
        <h1>Users</h1>
        <a href="users/register" class="btn btn-primary">Add User</a>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Username</th>
                    <th scope="col">Email</th>
                    <th scope="col">Role</th>
                    <th scope="col"></th>
             
                </tr>

            </thead>
            <tbody class="">
                {{#each users}}
                    <tr class="align-middle">
                        <th scope="col">
                            {{this.id}}
                        </th>
                        <td>{{this.username}}</td>
                        <td>{{this.email}}</td>
                        <td>{{this.roles.name}}</td>
                        <td>
                            <a href="/users/{{this.id}}/update" class="btn btn-primary btn-sm">Update</a>
                            <a href="/users/{{this.id}}/delete" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                        
                        
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{/block}}

{{/extends}}